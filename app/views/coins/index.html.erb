<p id="notice"><%= notice %></p>

<h1><%= @coins.human_attribute_name(:coin) %> </h1>

<table>
  <thead>
    <tr>
      <th> <%= @coins.human_attribute_name(:description) %> </th>
      <th> <%= @coins.human_attribute_name(:acronym) %> </th>
      <th> <%= @coins.human_attribute_name(:url_image) %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "35x35"%> </td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('titles.new_coin'), new_coin_path %>
